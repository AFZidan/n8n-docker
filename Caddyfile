# Global options for better ACME handling
{
    # Use staging CA to avoid rate limits while testing
    acme_ca https://acme-staging-v02.api.letsencrypt.org/directory
    email admin@hizidan.com  # Replace with your email
    
    # Uncomment below if HTTP challenge fails and you want to use DNS challenge
    # acme_dns cloudflare {env.CLOUDFLARE_API_TOKEN}
}

# n8n workflow automation
flow.hizidan.com {
    reverse_proxy n8n:5678 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto https
        header_up X-Forwarded-Host {host}
    }
    
    # Enable compression
    encode gzip
    
    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security max-age=31536000;
        # Prevent MIME type sniffing
        X-Content-Type-Options nosniff
        # Prevent clickjacking
        X-Frame-Options DENY
        # XSS protection
        X-XSS-Protection "1; mode=block"
    }
}

